<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

    <h1 class="text-3xl font-bold text-center">Registrar usuario</h1>

    <form action="" class="mt-4" method="POST">

        <input type="text" name="nombre" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="text" name="apellido" placeholder="Apellido" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="email" name="email" placeholder="Email" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="password" name="contraseña" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="text" name="tipo" placeholder="Tipo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <button type="submit" class="rounded-md bg-yellow-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-yellow-600 focus:bg-yellow-700">Registrar usuario</button>

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3 text-center">{{error}}</p>
        {{/if}}

    </form>

</div>